rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // User data security: Users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Workspaces security: Users can access workspaces they own
    // (Assuming we store ownerId on the workspace document)
    match /workspaces/{workspaceId} {
      allow create: if request.auth != null;
      allow read, write: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }

    // Default: Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
